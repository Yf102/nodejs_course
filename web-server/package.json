{
  "name": "web-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm i && npm run build:css && node src/app.js",
    "nodemon": "nodemon src/app.js -e js,hbs",
    "build:css": "npx tailwindcss --postcss -i ./src/css/styles.scss -o ./public/css/styles.css",
    "tailwind": "npx tailwindcss --postcss -i ./styles/global.scss -o ./public/css/styles.css --watch",
    "dev": "concurrently --kill-others \"npm run tailwind \" \"npm run nodemon\"",
    "heroku-postbuild": "npm run build:css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "axios": "^1.4.0",
    "chalk": "^5.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "hbs": "^4.2.0",
    "postcss": "^8.4.24",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.2.2",
    "postcss-preset-env": "^8.4.2",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
